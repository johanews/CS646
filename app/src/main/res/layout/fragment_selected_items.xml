<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group18.cs446.spacequest.selected_items">

    <fragment
        android:id="@+id/weapon_fragment"
        android:name="com.group18.cs446.spacequest.used_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1" />

    <TextView
        android:id="@+id/selected_weapon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/selected_weapon" />

    <fragment
        android:id="@+id/shield_fragment"
        android:name="com.group18.cs446.spacequest.used_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1" />

    <TextView
        android:id="@+id/selected_shield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="@string/selected_shield" />

    <fragment
        android:id="@+id/engine_fragment"
        android:name="com.group18.cs446.spacequest.used_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3" />

    <TextView
        android:id="@+id/selected_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/selected_engine" />

    <fragment
        android:id="@+id/h_fragment"
        android:name="com.group18.cs446.spacequest.used_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3" />

    <TextView
        android:id="@+id/selected_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="@string/selected_h" />

</GridLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.group18.cs446.spacequest.SettingActivity">

    <ImageView
        android:id="@+id/back_button_setting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/back_button" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:progressBackgroundTint="#FFFFFF"
        android:layout_marginTop="94dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBar2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="89dp"
        android:text="Volume"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seekBar2"
        android:layout_centerVertical="true"
        android:text="Notifications"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/TextView2"
        android:layout_alignStart="@+id/switch2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back_button_setting"
        android:layout_alignStart="@+id/TextView2"
        android:text="Airplane Mode"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/seekBar2"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginEnd="49dp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group18.cs446.spacequest.SectorItems">

    <ListView
        android:id="@+id/weapon_list"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@+id/weapon_icon_button"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="30.0sp" />

    <ListView
        android:id="@+id/shield_list"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@+id/weapon_icon_button"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="30.0sp" />

    <ListView
        android:id="@+id/engine_list"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@+id/weapon_icon_button"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="30.0sp" />

    <ListView
        android:id="@+id/hull_list"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@+id/weapon_icon_button"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="30.0sp" />

    <ImageView
        android:id="@+id/weapon_icon_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/ripple_effect"
        android:src="@drawable/weapon_icon" />

    <ImageView
        android:id="@+id/shield_icon_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/weapon_icon_button"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/weapon_icon_button"
        android:background="@drawable/ripple_effect"
        android:src="@drawable/shield_icon" />

    <ImageView
        android:id="@+id/engine_icon_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/shield_icon_button"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/shield_icon_button"
        android:background="@drawable/ripple_effect"
        android:src="@drawable/engine_icon" />

    <ImageView
        android:id="@+id/hull_icon_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/engine_icon_button"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/engine_icon_button"
        android:background="@drawable/ripple_effect"
        android:src="@drawable/hull_icon" />

</RelativeLayout>